    <%= form.label :situation %>
    <%= form.text_area :situation %>
  </div>

  <div class="field">
    <%= form.label :task %>
    <%= form.text_area :task %>
  </div>

  <div class="field">
    <%= form.label :action %>
    <%= form.text_area :action %>
  </div>

  <div class="field">
    <%= form.label :result %>
    <%= form.text_area :result %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
